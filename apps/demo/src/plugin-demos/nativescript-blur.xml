<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="nativescript-blur" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <GridLayout rows="" columns="">
            <Image src="https://wallpaperscraft.com/image/rose_flower_colorful_close-up_petals_18824_960x544.jpg" id="bgimage" stretch="aspectFill" />
            <StackLayout id="dimmer" width="100%" height="100%" />
            <StackLayout class="p-20" id="stack">
                <Button text="Blur the Cat" tap="{{blurCat}}" />
                <Button text="Unblur the Cat" tap="{{unBlurCat}}" />

                <Button text="Blur the Background Dark iOS" id="dark" tap="{{blurBg}}" />
                <Button text="Blur the Background Extra Dark iOS" id="extraDark" tap="{{blurBg}}" />
                <Button text="Blur the Background Light iOS" id="light" tap="{{blurBg}}" />
                <Button text="Blur the Background Extra Light iOS" id="extraLight" tap="{{blurBg}}" />
                <Button text="Blur the Background Regular iOS" id="regular" tap="{{blurBg}}" />
                <Button text="Blur the Background Prominent iOS" id="prominent" tap="{{blurBg}}" />
                <Button text="Unblur the Background iOS" tap="{{unBlurBg}}" />


                <Image src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRz2zZ447t45PELg9liuPfDoAcOwdnkuzN5eUSZiTHB8CgL2aduKw" width="200" id="cat" />
            </StackLayout>    
        </GridLayout>
        </ScrollView>
    </StackLayout>
</Page>